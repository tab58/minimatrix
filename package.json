{
  "name": "minimatrix",
  "version": "5.0.0",
  "description": "A linear algebra package for 2x2 and 3x3 matrices and 2D/3D vectors.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "nyc mocha -r ts-node/register ./test/*.spec.ts",
    "build": "npx tsc",
    "release": "npx release-it",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tab58/minimatrix.git"
  },
  "keywords": [
    "math",
    "linear",
    "algebra"
  ],
  "author": "Tim Bright",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tab58/minimatrix/issues"
  },
  "homepage": "https://github.com/tab58/minimatrix#readme",
  "dependencies": {
    "minimatrix-polyroots": "^3.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "chai": "^4.1.0",
    "eslint": "^6.8.0",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "release-it": "^15.6.0",
    "ts-node": "^8.5.4",
    "webpack": "^4.41.2"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    },
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${latestTag}...HEAD",
      "requireCleanWorkingDir": false,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "Release ${version}",
      "commitArgs": "",
      "tag": true,
      "tagName": "v${version}",
      "tagAnnotation": "Release ${version}",
      "tagArgs": "",
      "push": true,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "github": {
      "release": false,
      "releaseName": "Release ${version}"
    },
    "npm": {
      "publish": true,
      "publishPath": ".",
      "access": "public"
    }
  }
}
